           TargetType="{x:Type TabItem}">
            <Setter Property="Header" Value="{Binding DataContext.Name, RelativeSource={RelativeSource Mode=Self}}"/>
            <Setter Property="Content">
                <Setter.Value>
                    <Grid>
                        --><!--<TextBlock Text="2D контрол - демонстрация"
                                   Visibility="{Binding DataContext.SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MainWindow}}, Converter={StaticResource ConverterClass2dToBool}}"/>
                        <TextBlock Text="3D контрол - демонстрация"
                                   Visibility="{Binding DataContext.SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MainWindow}}, Converter={StaticResource ConverterClass3dToBool}}"/>

                        <TextBlock Text="{Binding DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Grid}}, Converter={StaticResource ConverterClass2dToBool}}"/>
